.goodsLayout .wrapper {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 25rpx;
  border-radius: 15rpx;
}
.goodsLayout .wrapper .title {
  font-size: 38rpx;
}
.goodsLayout .wrapper .list .row {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1px solid #eee;
}
.goodsLayout .wrapper .list .row .item {
  display: flex;
  align-items: center;
}
.goodsLayout .wrapper .list .row .item .img {
  width: 100px;
  /* 调整图片宽度 */
  height: 100px;
  /* 调整图片高度 */
  border-radius: 10px;
  margin-right: 20px;
}
.goodsLayout .wrapper .list .row .item .name {
  font-size: 30rpx;
  white-space: nowrap;
  /* 不换行显示 */
  overflow: hidden;
  /* 超出部分隐藏 */
  text-overflow: ellipsis;
  /* 超出部分显示省略号 */
}
.goodsLayout .wrapper .list .row .quantity {
  margin-left: auto;
  /* 将数量显示移到最右边 */
}
.goodsLayout .wrapper .list .row .price {
  margin-left: 20px;
  /* 设置价格与数量之间的间距 */
  font-weight: bold;
  font-size: 34rpx;
  color: #000;
}
.goodsLayout .wrapper .total {
  padding: 30rpx 0;
  text-align: right;
  font-size: 30rpx;
  color: #a7a7a7;
}
.goodsLayout .wrapper .total .big {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
}

