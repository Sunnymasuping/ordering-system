
.profile-container {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100vh;
	background-color: #f5f5f5;
}
.profile-card {
	background-color: #fff;
	padding: 20px;
	border-radius: 10px;
	box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	width: 80%;
	max-width: 400px;
	text-align: center;
}
.profile-header {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-bottom: 20px;
}
.avatar {
	width: 100px;
	height: 100px;
	border-radius: 50%;
	object-fit: cover;
}
.name {
	font-size: 24px;
	font-weight: bold;
	margin-top: 10px;
}
.profile-info {
	text-align: left;
	margin-bottom: 20px;
}
.info-item {
	font-size: 16px;
	color: #666;
	margin-bottom: 10px;
}
.u-button {
	width: 100%;
	margin-top: 20px;
}

